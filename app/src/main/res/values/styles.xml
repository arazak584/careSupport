<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">@color/black_overlay</item>
    </style>

    <!-- ActionBar Style -->
    <style name="Widget.Theme.CareSupport.ActionBar.Fullscreen" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- ButtonBar Style -->
    <style name="Widget.Theme.CareSupport.ButtonBar.Fullscreen" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?attr/buttonBarStyle</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@color/blue_500</item>
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>